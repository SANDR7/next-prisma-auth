generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model post {
  id          String  @id @default(cuid()) @db.VarChar(25)
  title       String @db.VarChar(255)
  description String @db.Text
  user_id     String? @db.VarChar(25)
  likes       Int?     @db.Int @default(0)
  users       user?   @relation(fields: [user_id], references: [id])

  @@index([user_id], map: "posts_user_id_fkey")
  @@map("posts")
}

model user {
  id       String     @id @default(cuid()) @db.VarChar(25)
  email    String?    @unique
  username String
  password String
  role     users_role
  profile   profile?
  posts    post[]

  @@map("users")
}

model profile {
  id String @id @default(cuid()) @db.VarChar(25)
  bio String
  avatar String
  function String
  phone String
  user user @relation(fields: [userId], references: [id])
  userId String

}

enum users_role {
  USER
  ADMIN
}
